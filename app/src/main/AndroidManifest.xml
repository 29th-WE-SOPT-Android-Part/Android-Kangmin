<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="org.sopt.soptandroidseminar">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>

    <application
        android:name=".view.App"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:usesCleartextTraffic="true"
        android:theme="@style/Theme.SoptAndroidSeminar">
        <activity
            android:name=".view.activity.MainActivity" />
        <activity
            android:name=".view.activity.DetailActivity" />
        <activity
            android:name=".view.signup.SignUpActivity" />
        <activity android:name=".view.activity.BoardingActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".view.signin.SignInActivity"
            android:exported="true" />
        <activity android:name=".view.activity.SettingActivity" />
    </application>

</manifest>